{
  "name": "jojo的翻译插件",
  "version": "0.1",
  "description": "跳转到cambridge",
  "manifest_version": 2,
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  // "browser_action": {
  //   "default_icon": {
  //     "32": "images/get_started32.png"
  //   },
  //   "default_title": "划词翻译",
  //   "default_popup": "popup.html"
  // },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content-script.css"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}